@using MeuSiteEmMVC.Models
@model ContatoModel
@{
    ViewData["Title"] = "Excluir Contato";
}

<div>
    <div class="text-center">
        <h3>Realmente deseja apagar o contato, @Model.Nome? </h3>
    </div>
    <br />
    <div class="text-center">
        <a asp-controller="Contato" asp-action="Excluir" class="btn btn-danger"><i class="bi bi-trash3"></i>Confirmar</a>

        <a class="btn btn-primary" asp-controller="Contato" asp-action="Index">Cancelar</a> 
    </div>
</div>



